# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Alternative: OpenRouter Configuration (if using OpenRouter instead of OpenAI)
# OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENAI_BASE_URL=https://openrouter.ai/api/v1

# OnchainKit API Key for Base integration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Supabase Configuration (optional - for production database)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Base Network Configuration
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# Farcaster Configuration (optional - for enhanced social features)
FARCASTER_HUB_URL=https://hub.farcaster.xyz
NEYNAR_API_KEY=your_neynar_api_key

# Storage Configuration (optional - for file uploads)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Security
NEXTAUTH_SECRET=your_nextauth_secret_for_production
NEXTAUTH_URL=http://localhost:3000

# Development
NODE_ENV=development
